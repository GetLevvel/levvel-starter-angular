{
  "name": "levvel-starter-angular",
  "version": "0.1.0",
  "scripts": {
    "ng": "ng",
    "build": "npm run config -- --environment=prod && ng build",
    "commit": "cz",
    "config": "ts-node ./scripts/setenv.ts",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "eslint": "eslint **/*.{html,js,ts} --color --ignore-path .gitignore --fix",
    "jest": "jest --detectOpenHandles",
    "jest:ci": "jest --ci",
    "jest:watch": "jest --watch",
    "lint": "concurrently \"npm run eslint\" \"npm run stylelint\" && npm run prettier",
    "prettier": "prettier **/*.{css,html,js,scss,ts} --ignore-path .gitignore --write",
    "start": "npm run config -- --environment=dev && ng serve",
    "start-prod": "npm run config -- --environment=prod && ng serve",
    "stylelint": "stylelint **/*.{css,scss} --color --ignore-path .gitignore --fix",
    "test": "concurrently \"npm run jest\" \"npm run cypress:run\"",
    "postinstall": "husky install"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~11.2.4",
    "@angular/common": "~11.2.4",
    "@angular/compiler": "~11.2.4",
    "@angular/core": "~11.2.4",
    "@angular/forms": "~11.2.4",
    "@angular/platform-browser": "~11.2.4",
    "@angular/platform-browser-dynamic": "~11.2.4",
    "@angular/router": "~11.2.4",
    "rxjs": "~6.6.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1102.3",
    "@angular-eslint/eslint-plugin": "1.2.0",
    "@angular-eslint/eslint-plugin-template": "1.2.0",
    "@angular-eslint/schematics": "1.2.0",
    "@angular-eslint/template-parser": "1.2.0",
    "@angular/cli": "~11.2.3",
    "@angular/compiler-cli": "~11.2.4",
    "@angular/language-service": "~11.2.4",
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@types/jest": "^26.0.20",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "4.3.0",
    "@typescript-eslint/parser": "4.3.0",
    "concurrently": "^6.0.0",
    "cypress": "^6.5.0",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.6.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsdoc": "30.7.6",
    "eslint-plugin-prefer-arrow": "1.2.2",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.1.1",
    "jest": "^26.6.3",
    "jest-cli": "^26.6.3",
    "jest-preset-angular": "^8.3.2",
    "prettier": "^2.2.1",
    "stylelint": "^13.11.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-prettier": "^1.1.2",
    "stylelint-scss": "^3.19.0",
    "ts-node": "~8.3.0",
    "typescript": "~4.1.5",
    "yargs": "^16.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "commonjs": true,
      "es6": true
    },
    "ignorePatterns": [
      "index.html"
    ],
    "overrides": [
      {
        "files": [
          "*.ts"
        ],
        "parserOptions": {
          "project": [
            "tsconfig.json"
          ],
          "createDefaultProgram": true
        },
        "extends": [
          "plugin:@angular-eslint/recommended",
          "plugin:@angular-eslint/template/process-inline-templates",
          "prettier"
        ],
        "rules": {
          "@angular-eslint/directive-selector": [
            "error",
            {
              "type": "attribute",
              "prefix": "app",
              "style": "camelCase"
            }
          ],
          "@angular-eslint/component-selector": [
            "error",
            {
              "type": "element",
              "prefix": "app",
              "style": "kebab-case"
            }
          ]
        }
      },
      {
        "files": [
          "*.html"
        ],
        "extends": [
          "plugin:@angular-eslint/template/recommended",
          "prettier"
        ],
        "rules": {}
      }
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "stylelint": {
    "extends": [
      "stylelint-config-recommended",
      "stylelint-config-recommended-scss",
      "stylelint-config-prettier"
    ],
    "plugins": [
      "stylelint-scss",
      "stylelint-prettier"
    ],
    "rules": {
      "prettier/prettier": true
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
